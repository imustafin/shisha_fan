.PP
\fBint fputs(const char *\fP\fIs\fP\fB, FILE *\fP\fIstream\fP\fB);\fP
.PP
\fBint putc(int \fP\fIc\fP\fB, FILE *\fP\fIstream\fP\fB);\fP
.PP
